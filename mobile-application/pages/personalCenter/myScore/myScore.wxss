/* pages/personalCenter/myScore/myScore.wxss */
.container{height:100vh;display:flex;flex-direction:column;letter-spacing:1rpx;}
.container .statistics{flex:1;width:660rpx;display:flex;flex-direction:column;justify-content:space-evenly;align-self:center;}
.container .statistics .title{font-size:24rpx;color:#3fd5d6;font-weight:bolder;}
.container .statistics .score{font-size:34rpx;color:#000;font-weight:bold;}
.container .statistics .chart{width:100%;height:200rpx;position:relative;display:flex;flex-direction:row;align-items:center;justify-content:space-between;}
.container .statistics .chart .pie {height:240rpx;width:250rpx;display:flex;flex-direction:column;align-items:center;justify-content:space-between;box-sizing:border-box;}
.container .statistics .chart .chart-data {height:200rpx;width:392rpx;display:flex;flex-direction:column;justify-content:space-evenly;box-sizing:border-box;font-size:24rpx;}
.container .statistics .chart .chart-data .data-item {display:flex;flex-direction:row;align-items:center;}
.container .statistics .chart .chart-data .data-item .block{width:20rpx;height:20rpx;border-radius:1rpx;margin:0 18rpx;}
.container .statistics .chart .chart-data .data-item .data-name{flex:1;}
.container .detail{flex:2;display:flex;flex-direction:column;}
.container .detail .detail-tab{display:flex;flex-direction:row;justify-content:space-around;border-bottom:1rpx solid #c7ccd2;font-size:24rpx;line-height:64rpx;color:#c7ccd2;font-weight:bolder;}
.container .detail .detail-tab .swiper-tab-item{letter-spacing:2rpx;}
.container .detail .detail-tab .active{color:black;border-bottom:6rpx solid #05b6d5;}
.container .detail .detail-content{flex:1;}
.container .detail .detail-content .content-item scroll-view {width:100%;height:100%;display:flex;flex-direction:column;justify-content:center;margin:0 auto;}
.container .detail .detail-content .content-item scroll-view .scroll-view-item{width:100%;height:138rpx;background-color:#fff;border-bottom:#e7eaeb 1rpx solid;display:flex;flex-direction:row;justify-content:center;align-items:center;}
.container .detail .detail-content .content-item scroll-view .scroll-view-item .item-image{width:69rpx;height:69rpx;margin-left:42rpx;margin-right:30rpx;}
.container .detail .detail-content .content-item scroll-view .scroll-view-item .content{flex:1;}
.container .detail .detail-content .content-item scroll-view .scroll-view-item .content .content-title{font-size:28rpx;font-weight:bolder;color:#000;margin-bottom:6rpx;}
.container .detail .detail-content .content-item scroll-view .scroll-view-item .content .content-time {font-size:24rpx;color:#c7ccd2;}
.container .detail .detail-content .content-item scroll-view .scroll-view-item .number{margin-right:59rpx;font-size:30rpx;}
ec-canvas {width:100%;height:100%;}
