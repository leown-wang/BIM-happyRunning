/* pages/mooc/moocDetails/moocDetails.wxss */
.container{
    width: 100%;
    display: flex;
    flex-direction: column;
    background-color: #f5f6f6;
}
.container .video{
    width: 100%;
    background-color: #fff;
    margin-bottom: 1vh;
}
.container .video .video-inner{
    width: 690rpx;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    height: 43vh;
}
.container .video .video-inner video{
    width: 690rpx;
    height: 380rpx;
    border-radius: 18rpx;
}
.container .video .video-inner .video-title{
    font-size: 30rpx;
    font-weight: bolder;
}
.container .video .video-inner .video-info{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 24rpx;
    color: #cccccc;
}
.container .detail{
    width: 100%;
    background-color: #fff;
}
.container .detail .detail-inner{
    width: 690rpx;
    margin: 0 auto;
    height: 56vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
}
.container .detail .detail-inner .tab{
    height: 6vh;
    display: flex;
    flex-direction: row;
    width: 509rpx;
    justify-content: space-between;
}
.container .detail .detail-inner .tab .tab-item{
    font-weight: bolder;
    font-size: 24rpx;
    color: #cccccc;
    height: 6vh;
    line-height: 6vh;

}
.container .detail .detail-inner .tab .tab-item.active{
    color: #57d3e6;
    border-bottom: 5rpx #57d3e6 solid;
}
.container .detail .detail-inner .content{

    font-size: 24rpx;
    letter-spacing: 1rpx;
    height: 50vh;
}
.container .detail .detail-inner .content .content-title{
    font-weight: bolder;
    margin-top: 32rpx;
}
.container .detail .detail-inner .content .content-mian{
    text-indent: 50rpx;
    margin: 29rpx;
    line-height: 48rpx;
}
