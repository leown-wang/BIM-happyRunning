/*--------日月年排行切换--------*/
.swiper {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    line-height: 62rpx; 
    border-bottom: 1rpx solid rgba(231, 234, 235, 1);
}
.swiper-item {
    font-size: 24rpx;
    color: rgba(199, 204, 210, 1);
}
.swiper-item:first-child {
    margin-left: 60rpx;
}
.swiper-item:last-child {
    margin-right: 60rpx;
}
/*当前排行底部横条*/
.swiper .checked {
    border-bottom: 6rpx solid rgba(5, 182, 213, 1);
    color: black;
}

/*--------排名的学生的具体样式--------*/
/*总盒子*/
.list {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 116rpx;
    border-bottom: 1rpx solid rgba(231, 234, 235, 1);
}
/*排名序列号样式*/
.list > image, .num {
    width: 43rpx;
    height: 49rpx;
    margin: 0 48rpx 0 60rpx;
    font-size: 48rpx;
    text-align: center;
    line-height: 49rpx;
}
/*----学生头像、昵称和运动里程样式----*/
.student {
    display: flex;
    flex: 1;
    flex-direction: row;
    align-items: center;
}
.student-protrait {
    width: 78rpx;
    height: 78rpx;
    margin-right: 18rpx;
}
.student-id, .mileage {
    font-size: 28rpx;
    letter-spacing: 1rpx;
}
.mileage {
    margin-right: 60rpx;
    color: rgba(5, 182, 213, 1);
}

/*--------第一名样式--------*/
.first-student {
    height: 286rpx;
    text-align: center;
}
.first-student > image {
    margin-right: 0rpx;
}

/*----第一名头像及昵称样式----*/
.first-student .student {
    flex: 1;
    height: 100%;
    position: relative;
}
.first-student .student-protrait-bg {
    position: absolute;
    left: 138rpx;
    width: 304rpx;
    height: 130rpx;
}
.first-student .student-protrait {
    position: absolute;
    top: calc(50% - 38rpx);
    left: 232rpx;
    width: 94rpx;
    height: 94rpx;
}
.first-student .student-id {
    position: absolute;
    left: 63%;
    top: 73%;
    letter-spacing: 3rpx;
    font-size: 24rpx;
}
.first-student .mileage {
    font-size: 24rpx;
}
.first-student .shoes {
    width: 23rpx;
    height: 22rpx;
    margin-right: 5rpx;
}

/*自己的排名样式*/
.me {
  width: 46rpx;
  height: 46rpx;
  background-color: rgba(5, 182, 213, 1);
  border-radius: 50%;
  font-size: 40rpx;
  color: white;
  line-height: 46rpx;
}

/*加载更多*/
.more {
    width: 100%;
    height: 82rpx;
    font-size: 24rpx;
    text-align: center;
    line-height: 82rpx;
    letter-spacing: 1rpx;
    color: rgba(199, 204, 210, 1);
}