/* pages/personalCenter/personalCenter.js.wxss */

.container{
    z-index: -2;
    height: 100vh;
    position: relative;
    background-color: #fcfefe;
}

.container .top{
    z-index: -1;
    position: absolute;
    top: 0;
    left: 0;
    height: 200rpx;
    width: 750rpx;
    background: linear-gradient(to right,  rgb(20,182,207) 0%,rgb(20,205,207) 100%);
}
.container .top .top-inner{
    display: flex;
    width: 690rpx;
    flex-direction: row;
    align-items: center;
    height: 100%;
    margin: 0 auto;
}
.container .top .top-inner .userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
}
.container .top .top-inner .info {
    flex: 1;
    color: #fff;
    margin-left: 30rpx;
}
.container .top .top-inner .info .info-name {
    font-size: 30rpx;
    font-weight: bold;
    letter-spacing: 2rpx;
    font-family: SourceHansSC Medium;

}
.container .top .top-inner .info .info-num {
    font-size: 20rpx;
    line-height: 50rpx;
    letter-spacing: 1rpx;
    font-family: SourceHansSC Regular;
}
.container .top .top-inner .identification {
    font-weight: 400;
    width: 115rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    border-radius: 20rpx;
    font-size: 24rpx;
    color: #f8a348;
    background-color: #8ae3e7;
    flex-direction: SourceHanSansSC;
}
.container .sections{
    margin-top: -20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 548rpx;
}
.container .sections section{
    box-sizing: border-box;
    box-shadow: 0rpx 3rpx 7rpx 3rpx #ecf2f3;
    height: 196rpx;
    width: 690rpx;
    border-radius: 8rpx;
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
    padding: 28rpx;
    justify-content: space-between;
    font-size: 24rpx;
}
.container .sections section .section-title{
    display: flex;
    flex-direction: row;
    font-weight: bold;
}
.container .sections section .section-title text{
    flex: 1;
}
.container .sections section .next-icon{
    width: 11rpx;
    height: 20rpx;

}
.container .sections section .section-content{
    display: flex;
    flex-direction: row;
}
.container .sections section .section-content view{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 83rpx;
}
.container .sections section .section-content view text{

}
.container .sections section .section-content view .number{
    font-weight: bold;
    font-size: 34rpx;
}
.container .sections .my-mooc{
    height: 97rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 28rpx;
    letter-spacing: 1rpx;
}
.container .sections .my-mooc text{
    flex: 1;
}
.container .sections .my-mooc .mooc-icon{
    width: 40rpx;
    height: 40rpx;
    margin-right: 30rpx;
}
