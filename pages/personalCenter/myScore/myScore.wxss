/* pages/personalCenter/myScore/myScore.wxss */
div{
    box-sizing: border-box;
    padding: 0;
    margin: 0;
}
.container{
    height: 100vh;
    display: flex;
    flex-direction: column;
}
.container .statistics{
    flex: 1;
    width: 660rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-self: center;
}
.container .statistics .title{
    font-size: 24rpx;
    color: #3fd5d6;
    font-weight: bolder;
}
.container .statistics .score{
    font-size: 34rpx;
    color: #000;
    font-weight: bold;
}
.container .statistics .chart{
    width: 100%;
    height: 200rpx;
    background-color: #3fd5d6;
}
.container .detail{
    flex: 2;
    display: flex;
    flex-direction: column;
 }
.container .detail .detail-tab{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    border-bottom: 1rpx solid #c7ccd2;
    font-size: 24rpx;
    line-height: 64rpx;
    color: #c7ccd2;
    font-weight: bolder;
}
.container .detail .detail-tab .swiper-tab-item{

}
.container .detail .detail-tab .active{
    color: black;
    border-bottom: 6rpx solid #05b6d5;

}
.container .detail swiper{
    flex: 1;
}
.container .detail swiper swiper-item scroll-view {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: 0 auto;
}
.scroll-view-item{
    width: 100%;
    height: 80px;
    background-color: yellow;
    margin: 4rpx;

}
