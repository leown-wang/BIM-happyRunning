<!--pages/personalCenter/myScore/myScore.wxml-->
<view class="container">
    <view class="statistics">
        <view class="title">7月成绩实时统计</view>
        <view class="score">总成绩 11</view>
        <view class="chart">
            <view class="chart-ring"></view>
            <view class="chart-data"></view>
        </view>
    </view>
    <view class="detail">
        <view class="detail-tab">
            <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">今日成绩</view>
            <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">本月成绩</view>
            <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">本学期成绩</view>
        </view>
        <swiper current="{{currentTab}}" duration="300"  bindchange="swiperTab">
            <swiper-item class="detail-day">
                <scroll-view scroll-y  >
                    <view id="green" class="scroll-view-item bc_green"></view>
                    <view id="red"  class="scroll-view-item bc_red"></view>
                    <view id="yellow" class="scroll-view-item bc_yellow"></view>
                    <view id="blue" class="scroll-view-item bc_blue"></view>
                    <view id="green" class="scroll-view-item bc_green"></view>
                    <view id="red"  class="scroll-view-item bc_red"></view>
                    <view id="yellow" class="scroll-view-item bc_yellow"></view>
                    <view id="red"  class="scroll-view-item bc_red"></view>
                    <view id="yellow" class="scroll-view-item bc_yellow"></view>
                    <view id="blue" class="scroll-view-item bc_blue"></view>
                </scroll-view>
            </swiper-item>
            <swiper-item class="detail-month">2</swiper-item>
            <swiper-item class="deatil-year">3</swiper-item>
        </swiper>
    </view>
</view>
